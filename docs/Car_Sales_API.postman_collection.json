    {
      "name": "Cars",
      "item": [
        {
          "name": "Get All Cars",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/cars",
              "host": ["{{base_url}}"],
              "path": ["cars"]
            }
          }
        },
        {
          "name": "Get Cars with Filters",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/cars?make=Toyota&minYear=2020&maxPrice=5000000&sort=price_asc",
              "host": ["{{base_url}}"],
              "path": ["cars"],
              "query": [
                {
                  "key": "make",
                  "value": "Toyota"
                },
                {
                  "key": "minYear",
                  "value": "2020"
                },
                {
                  "key": "maxPrice",
                  "value": "5000000"
                },
                {
                  "key": "sort",
                  "value": "price_asc"
                }
              ]
            }
          }
        },
        {
          "name": "Search Cars",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/cars?search=Toyota Camry",
              "host": ["{{base_url}}"],
              "path": ["cars"],
